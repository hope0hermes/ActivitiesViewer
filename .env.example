# ActivitiesViewer Environment Configuration
# Copy this file to .env and update paths as needed

# Data directory containing enriched activities and streams
# Can be absolute or relative to the project root
ACTIVITIES_VIEWER_DATA_DIR=/path/to/data_enriched

# Filenames within the data directory (relative paths)
ACTIVITIES_VIEWER_ACTIVITIES_ENRICHED_FILE=activities_enriched.csv
ACTIVITIES_VIEWER_ACTIVITY_SUMMARY_FILE=activity_summary.json
ACTIVITIES_VIEWER_STREAMS_DIR=Streams

# Athlete settings
ACTIVITIES_VIEWER_FTP=285
ACTIVITIES_VIEWER_WEIGHT_KG=77.0
ACTIVITIES_VIEWER_MAX_HR=185

# Application settings
ACTIVITIES_VIEWER_VERBOSE=false
ACTIVITIES_VIEWER_CACHE_TTL=3600

# Streamlit display
ACTIVITIES_VIEWER_PAGE_TITLE="Activities Viewer"
ACTIVITIES_VIEWER_PAGE_ICON="ðŸš´"

